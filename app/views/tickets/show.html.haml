-content_for :meta_top do
  !=noindex_nofollow
- content_for :head do
  %link{:href => "/2011/stylesheets/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}
#content
  %h1
    RubyKaigi #{@ticket.ruby_kaigi.year}, #{t(@ticket.ticket_type)}
    - if @ticket.extra_ticket_type.present?
      (#{@ticket.extra_ticket_type})

  %h2 Ticket Code
  %p.ticket #{@ticket.ticket_code}

  %h2 Ticket Type
  %p.ticket
    #{t(@ticket.ticket_type)}
    - if @ticket.extra_ticket_type.present?
      (#{@ticket.extra_ticket_type})

  %h2 Your Name
  %p.ticket #{@ticket.name}

  - unless smartphone?
    .screen_only
      %p{:style => 'text-align:right'}!= link_to 'Edit', edit_ticket_path(@ticket)

  %h2 Your Email
  %p.ticket #{@ticket.email}

  - unless smartphone?
    .screen_only
      %p{:style => 'text-align:right'}!= link_to 'Edit', edit_ticket_path(@ticket)

  .screen_only
    %h2 Permalink
    %p{:style=>'font-size:12px'}!= link_to ticket_url(@ticket), ticket_path(@ticket)
    %p (Anybody can see this page via permalink)
    - unless smartphone?
      %p{:style => 'text-align:right'}!= link_to('Regenerate Permalink', regenerate_permalink_ticket_path(@ticket), :method => :put)
  %p.stamp
    %img{ :alt => "Thank you for your attendance!", :src => "/2011/images/tickets_stamp.png" }

  <br />
  <br />
  <br />
  .screen_only
    %p!= link_to 'Back to My Tickets', my_tickets_path
